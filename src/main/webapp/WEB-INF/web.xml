	<security-role>
		<role-name>AUTHENTICATED</role-name>
	</security-role>

	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>

	<welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list> 
</web-app>